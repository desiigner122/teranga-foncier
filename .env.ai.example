# Configuration de l'environnement pour les fonctionnalités IA
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Configuration OpenAI (pour l'assistant IA)
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_AI_API_ENDPOINT=https://api.openai.com/v1

# Configuration alternative pour d'autres fournisseurs d'IA
# REACT_APP_AI_PROVIDER=anthropic|google|local
# REACT_APP_ANTHROPIC_API_KEY=your_anthropic_key
# REACT_APP_GOOGLE_AI_KEY=your_google_ai_key

# Configuration Supabase (si différente de la config principale)
REACT_APP_SUPABASE_AI_FUNCTIONS_URL=your_supabase_functions_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key

# Configuration des fonctionnalités IA
REACT_APP_AI_ENABLED=true
REACT_APP_AI_CONFIDENCE_THRESHOLD=0.7
REACT_APP_AI_MAX_REQUESTS_PER_HOUR=100

# Configuration de la prédiction de marché
REACT_APP_MARKET_PREDICTION_ENABLED=true
REACT_APP_MARKET_UPDATE_INTERVAL_HOURS=24

# Configuration des notifications IA
REACT_APP_AI_NOTIFICATIONS_ENABLED=true
REACT_APP_AI_AUTO_EXECUTE_HIGH_CONFIDENCE=false

# Configuration du logging IA
REACT_APP_AI_LOGGING_ENABLED=true
REACT_APP_AI_LOG_LEVEL=info

# Configuration de sécurité IA
REACT_APP_AI_REQUIRE_CONFIRMATION=true
REACT_APP_AI_ADMIN_ONLY_ACTIONS=DELETE_USER,BULK_DELETE,SYSTEM_CONFIG

# URLs des services externes
REACT_APP_WEATHER_API_KEY=your_weather_api_key
REACT_APP_GEOLOCATION_API_KEY=your_geolocation_api_key

# Configuration pour les notifications par email/SMS
REACT_APP_EMAIL_SERVICE_ENDPOINT=your_email_service_url
REACT_APP_SMS_SERVICE_ENDPOINT=your_sms_service_url

# Configuration de l'analyse de sentiments (pour les avis clients)
REACT_APP_SENTIMENT_ANALYSIS_ENABLED=true

# Configuration de la reconnaissance vocale
REACT_APP_VOICE_COMMANDS_ENABLED=true
REACT_APP_VOICE_LANGUAGE=fr-FR
